#sidebar
  @media mq-normal
    column(sidebar-column)

.widget-wrap
  margin: block-margin 0
  font-size: 3rem; /* MY CHANGE */

.widget-title
  @extend $block-caption

.widget
  color: color-sidebar-text
  background: color-widget-background
  box-shadow: 0 -1px 4px color-widget-border inset
  border: 1px solid color-widget-border
  padding: 15px
  border-radius: 3px
  a
    font-size: 1.5rem !important; /* MY CHANGE */ /* FIX IMPORTANT HACK LATER */
    color: color-link
    text-decoration: none
    &:hover
      text-decoration: underline
  ul, ol, dl
    ul, ol, dl
      margin-left: 15px
      list-style: disc
    li
      padding: 1rem 0 0 0; /* MY CHANGE */
      margin: 1rem 0; /* MY CHANGE */
      line-height: 1.5rem; /* MY CHANGE */